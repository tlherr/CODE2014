{% set active_section = active_section|default(false) %}
{% block body_container_header %}
    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-mobile">
                    <span class="sr-only">{{ "toggle_navigation"|trans() }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('renegade_car_impact_homepage') }}">{{ "site_name"|trans() }}</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-mobile">
                <ul class="nav navbar-nav navbar-right">
                    <li{% if active_section == "about" %} class="active"{% endif %}><a href="{{ path('renegade_car_impact_about') }}">{{ "about"|trans() }}</a></li>
                    <li>
                    {% set params = app.request.attributes.get('_route_params')|merge(app.request.query.all()) %}
                    {% set frParams = params|merge({'_locale': 'fr'}) %}
                    {% set enParams = params|merge({'_locale': 'en'}) %}
                    {%if app.request.locale == "en"%}
                        <a href="{{ path(app.request.attributes.get('_route'), frParams) }}">Fran√ßais</a>
                    {%else%}
                        <a href="{{ path(app.request.attributes.get('_route'), enParams) }}">English</a>
                    {%endif%}
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}