{% extends 'RenegadeCarImpactBundle::base.html.twig' %}
{% set page_title = "home"|trans() %}
{% set active_section = "home" %}
{% block body_container_main %}
    <section id="vehicle-app">
        <section id="vehicle-select">
            <div class="select-form">
                <div class="form-group">
                    <select id="make-entry" class="form-control select2-choice" tabindex="1">
                        <option value="0">{{ "choose_make"|trans }}</option>
                    </select>
                </div>
                <div class="form-group">
                    <select id="model-entry" class="form-control select2-choice" tabindex="2">
                        <option value="0">{{ "choose_model"|trans }}</option>
                    </select>
                </div>
                <div class="form-group">
                    <select id="year-entry" class="form-control" tabindex="3">
                        <option value="0">{{ "choose_year"|trans() }}</option>
                    </select>
                </div>

            </div>

            <div>
                <ul id="vehicle-select-list">

                </ul>
            </div>

        </section>

        <section id="vehicle-listing">
            <div class="hamburger" tabindex="0">
                <span class="menu">
                    <span class="glyphicon glyphicon-search"></span> Sort
                </span>

                <menu type="list" class="push-golden">
                    <div class="btn-group-vertical filters-container">
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-city-mpg" data-sort-order="none">{{ "Fuel Economy (City MPG)"|trans }} <span class="glyphicon glyphicon-tower"></span></button>
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-highway-mpg" data-sort-order="none">{{ "Fuel Economy (Highway MPG)"|trans }} <span class="glyphicon glyphicon-road"></span></button>
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-transmission" data-sort-order="none">{{ "Transmission Type"|trans }} <span class="glyphicon glyphicon-cog"></span></button>
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-fuel" data-sort-order="none">{{ "Fuel Type"|trans }} <span class="glyphicon glyphicon-fire"></span></button>
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-emissions" data-sort-order="none">{{ "Emissions"|trans }} <span class="glyphicon glyphicon-tree-conifer"></span></button>
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-year" data-sort-order="none">{{ "Year"|trans }} <span class="glyphicon glyphicon-calendar"></span></button>
                        <button type="button" class="btn btn-default filter" data-sort-attr="data-engine-size" data-sort-order="none">{{ "Engine Size"|trans }} <span class="glyphicon glyphicon-filter"></span></button>

                    </div>
                </menu>
            </div>
            <ul id="vehicle-list">

            </ul>
        </section>
    </section>
    <script type="text/template" id="vehicle-select-template">
        <div class="action">
            <button class="btn btn-success add-button"><span class="glyphicon glyphicon-plus"> Add</button>
        </div>
        <div class="information">
            <span><%- make.label %></span>
            <span><%- model.label %> <%- model.modifiers %></span>
            <span><%- cylinders %> {{ 'cylinder'|trans() }}, <%- engine_size %>L</span>
            <span>(<%- fuel_type_string %>, <%- transmission_type_string %>)</span>
        </div>
    </script>
    <script type="text/template" id="vehicle-template">
        <div class="vehicle">
            <div class="classifying-information">
                <span class='data-year'><%- year %></span>
                <span class='data-label'><%- make.label %> <%- model.label %> <%- model.modifiers %></span>
                <span class='data-engine'><%- cylinders %> {{ "cylinder"|trans({}) }}, <%- engine_size %>L</span>
                <span class='data-fuel'><%- fuel_type_string %></span>
                <span class='data-transmission'><%- transmission_type_string %></span>
            </div>
            <div class="numeric-data">
                <span class='data-city-mileage'>City MPG: <%- mileage.city.mpg %></span>
                <span class='data-highway-mileage'>Highway MPG: <%- mileage.highway.mpg %></span>
            </div>
        </div>
    </script>
{% endblock %}
