{% extends 'RenegadeCarImpactBundle::base.html.twig' %}

{% block body_container_main %}
    <section id="vehicle-app">
        <section id="vehicle-select">
            <div class="select-form">
                <div class="form-group">
                    <select id="make-entry" class="form-control select2-choice" tabindex="1">
                        <option value="0">{{ "choose_make"|trans }}</option>
                    </select>
                </div>
                <div class="form-group">
                    <select id="model-entry" class="form-control select2-choice" tabindex="2">
                        <option value="0">{{ "choose_model"|trans }}</option>
                    </select>
                </div>
                <div class="form-group">
                    <select id="year-entry" class="form-control" tabindex="3">
                        <option value="0">{{ "choose_year"|trans() }}</option>
                    </select>
                </div>
            </div>
            <div>
                <ul id="vehicle-select-list">

                </ul>
            </div>
        </section>
        <section id="vehicle-listing">
            <ul id="vehicle-list">

            </ul>
        </section>
    </section>
    <script type="text/template" id="vehicle-select-template">
        <span><%- make.label %></span>
        <span><%- model.label %> <%- model.modifiers %></span>
        <span><%- cylinders %> {{ 'cylinder'|trans() }}, <%- engine_size %>L</span>
        <span>(<%- fuel_type_string %>, <%- transmission_type_string %>)</span>
        <button class="btn btn-success"><span class="glyphicon glyphicon-plus"> Add</button>
    </script>
    <script type="text/template" id="vehicle-template">
        <div class="vehicle" data-highway-mpg="<%- mileage.city.mpg %>">
            <span class='id'><%- year %></span>
            <span><%- make.label %></span>
            <span><%- model.label %> <%- model.modifiers %></span>
            <span><%- cylinders %>, <%- engine_size %></span>
            <span><%- fuel_type_string %></span>
            <span><%- transmission_type_string %></span>
            <span>City MPG: <%- mileage.city.mpg %></span>Â«
        </div>
    </script>
{% endblock %}
